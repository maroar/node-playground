<!DOCTYPE html>
<html lang="pt">

<head>

    <% include ./partials/header_includes %>

</head>

<body>

    <div id="wrapper">

        <% include ./partials/menu %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"><%= title %></h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Incluir Usuário
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form role="form" action="/usuarios" method="post">
                                        <div class="form-group">
                                            <label>Nome</label>
                                            <input class="form-control" placeholder="Nome" name="usuario[nome]"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input class="form-control" placeholder="Email" name="usuario[email]"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Nome de usuário</label>
                                            <input class="form-control" placeholder="Nome de usuário" name="usuario[usuario]"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Senha</label>
                                            <input class="form-control" placeholder="Senha" name="usuario[senha]"/>
                                        </div>
                                        <div class="form-group">
                                            <label>CPF</label>
                                            <input class="form-control" placeholder="CPF" name="usuario[cpf]">
                                        </div>
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="usuario[isAdmin]"/>Administrador
                                            </label>
                                        </div>
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="usuario[ativo]" checked/>Ativo
                                            </label>
                                        </div>
                                        <button type="submit" class="btn btn-default">Enviar</button>
                                        <button type="reset" class="btn btn-default">Limpar Formulário</button>
                                    </form>
                                </div>
                                <!-- /.col-lg-12 -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Usuários Cadastrados no Sistema
                        </div>
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Nome de Usuário</th>
                                        <th>Email</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let numberOfUsers = usuarios.length; for (let i = 0; i < numberOfUsers; i++) { %>
                                        <tr class=<%= ((i%2) == 0) ? "odd gradeX" : "even gradeC" %> >
                                            <td class="center"><%= usuarios[i].nome %></td>
                                            <td class="center"><%= usuarios[i].usuario %></td>
                                            <td class="center"><%= usuarios[i].email %></td>
                                            <td class="center">
                                                <form role="form" action="<%= `/usuarios/${usuarios[i]._id}` %>" method="delete">
                                                    <button type="submit" class="btn btn-default">Remover</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% include ./partials/bottom_includes %>

</body>

</html>